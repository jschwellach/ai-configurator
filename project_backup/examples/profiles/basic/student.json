{
    // ============================================================================
    // STUDENT PROFILE
    // ============================================================================
    // This profile is designed for students, researchers, and academics. It
    // provides contexts and tools specifically tailored for academic work,
    // research projects, and educational scenarios.
    // ============================================================================
    // METADATA SECTION
    "metadata": {
        "name": "student",
        "description": "Profile optimized for students, researchers, and academic work",
        "category": "basic",
        "version": "1.0.0",
        "author": "AI Configurator Team",
        "created": "2024-01-01",
        "tags": [
            "student",
            "academic",
            "research",
            "education",
            "learning"
        ],
        "complexity": "low",
        "prerequisites": [],
        "related_templates": [
            "minimal",
            "content-creator",
            "researcher"
        ]
    },
    // CONTEXT PATHS SECTION
    // ============================================================================
    // Contexts specifically chosen for academic and learning workflows:
    // - Research methodologies and best practices
    // - Academic writing standards
    // - Study strategies and time management
    // - Project-specific information
    // ============================================================================
    "paths": [
        // Core academic research methods - comprehensive research guidance
        "examples/contexts/domains/academic-research-methods.md",
        // Content creation guidelines - for academic writing and documentation
        "examples/contexts/domains/content-creation-guidelines.md",
        // Development guidelines - for students learning programming
        "contexts/development-guidelines.md",
        // Project README - provides context about the current project/assignment
        "README.md",
        // Course or assignment specific documentation
        "?docs/assignment-requirements.md",
        "?docs/course-syllabus.md",
        "?docs/project-guidelines.md",
        // Any additional academic resources
        "?resources/**/*.md",
        "?notes/**/*.md"
    ],
    // HOOKS SECTION
    // ============================================================================
    // Automation hooks useful for students and academic work:
    // - Citation checking and formatting
    // - Plagiarism detection
    // - Study session tracking
    // - Assignment deadline reminders
    // ============================================================================
    "hooks": {
        // Citation formatter - ensures proper academic citations
        "citation-formatter": {
            "enabled": false, // Enable when you have the hook script available
            "description": "Automatically format citations according to academic standards",
            "trigger": "on_file_save",
            "config": {
                "file_patterns": [
                    "*.md",
                    "*.tex",
                    "*.docx"
                ],
                "citation_style": "APA", // Options: APA, MLA, Chicago, IEEE
                "check_bibliography": true,
                "auto_generate_bibliography": true,
                "exclude_patterns": [
                    "drafts/**",
                    "notes/**"
                ]
            }
        },
        // Study session tracker - helps with time management and productivity
        "study-tracker": {
            "enabled": false, // Enable when you have the hook script available
            "description": "Track study sessions and productivity metrics",
            "trigger": "on_session_start",
            "config": {
                "track_time": true,
                "track_files_modified": true,
                "generate_reports": true,
                "report_frequency": "weekly",
                "productivity_metrics": [
                    "words_written",
                    "files_created",
                    "time_spent"
                ]
            }
        },
        // Assignment deadline reminder - helps with project management
        "deadline-reminder": {
            "enabled": false, // Enable when you have the hook script available
            "description": "Send reminders for upcoming assignment deadlines",
            "trigger": "scheduled", // Runs on schedule
            "config": {
                "check_frequency": "daily",
                "reminder_days": [
                    7,
                    3,
                    1
                ], // Days before deadline to send reminders
                "assignment_file": "assignments.json",
                "notification_method": "desktop" // Options: desktop, email, slack
            }
        },
        // Research note organizer - helps organize research materials
        "research-organizer": {
            "enabled": false, // Enable when you have the hook script available
            "description": "Automatically organize research notes and references",
            "trigger": "on_file_create",
            "config": {
                "watch_directories": [
                    "notes/",
                    "research/",
                    "references/"
                ],
                "auto_categorize": true,
                "create_index": true,
                "link_related_notes": true,
                "backup_frequency": "daily"
            }
        }
    },
    // SETTINGS SECTION
    // ============================================================================
    // Settings optimized for academic and learning workflows
    // ============================================================================
    "settings": {
        // Auto-reload contexts when files change (useful during research)
        "auto_reload": true,
        // Higher limit for contexts since students often reference many sources
        "max_contexts": 100,
        // Validate contexts to catch broken links and references
        "validate_contexts": true,
        // Info level logging for academic feedback
        "log_level": "info",
        // Academic-specific settings
        "academic_settings": {
            // Preferred citation style for academic work
            "default_citation_style": "APA",
            // Default directory for research notes
            "notes_directory": "notes/",
            // Default directory for research references
            "references_directory": "references/",
            // Whether to automatically backup work
            "auto_backup": true,
            // Backup frequency
            "backup_frequency": "daily",
            // Whether to track study time
            "track_study_time": true,
            // Default academic year format
            "academic_year_format": "YYYY-YYYY"
        },
        // Study productivity settings
        "productivity_settings": {
            // Pomodoro timer settings
            "pomodoro_work_duration": 25, // minutes
            "pomodoro_break_duration": 5, // minutes
            "pomodoro_long_break": 15, // minutes
            // Daily study goals
            "daily_study_goal": 4, // hours
            "weekly_study_goal": 25, // hours
            // Distraction blocking
            "block_distracting_sites": false,
            "focus_mode_duration": 60 // minutes
        }
    }
    // ============================================================================
    // STUDENT PROFILE CUSTOMIZATION NOTES
    // ============================================================================
    // To customize this profile for your specific academic needs:
    // 
    // 1. ACADEMIC LEVEL:
    //    - Undergraduate: Focus on basic research methods and study skills
    //    - Graduate: Add advanced research contexts and thesis writing guides
    //    - PhD: Include dissertation writing and academic career contexts
    // 
    // 2. FIELD OF STUDY:
    //    - STEM: Add contexts for lab work, data analysis, technical writing
    //    - Humanities: Add contexts for literary analysis, historical research
    //    - Social Sciences: Add contexts for survey methods, statistical analysis
    // 
    // 3. RESEARCH TYPE:
    //    - Quantitative: Add statistical analysis and data visualization contexts
    //    - Qualitative: Add interview methods and thematic analysis contexts
    //    - Mixed Methods: Include both quantitative and qualitative resources
    // 
    // 4. COLLABORATION:
    //    - Group projects: Add team collaboration and project management contexts
    //    - Research teams: Include academic collaboration and co-authoring guides
    //    - Peer review: Add contexts for giving and receiving academic feedback
