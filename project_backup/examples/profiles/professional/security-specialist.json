{
    // ============================================================================
    // SECURITY SPECIALIST PROFILE
    // ============================================================================
    // This profile is designed for security specialists, security engineers,
    // compliance officers, and cybersecurity professionals. It provides contexts
    // and automation tools specifically tailored for security assessments,
    // compliance monitoring, threat detection, and security best practices.
    // ============================================================================
    // METADATA SECTION
    "metadata": {
        "name": "security-specialist",
        "description": "Profile optimized for security specialists, security engineers, and compliance professionals",
        "category": "professional",
        "version": "1.0.0",
        "author": "AI Configurator Team",
        "created": "2024-01-01",
        "tags": [
            "security",
            "cybersecurity",
            "compliance",
            "threat-detection",
            "vulnerability-assessment",
            "penetration-testing",
            "incident-response",
            "risk-management"
        ],
        "complexity": "medium",
        "prerequisites": [
            "Security fundamentals knowledge",
            "Understanding of compliance frameworks",
            "Network security concepts",
            "Basic scripting skills"
        ],
        "related_templates": [
            "devops-engineer",
            "data-scientist",
            "solutions-architect"
        ]
    },
    // CONTEXT PATHS SECTION
    // ============================================================================
    // Contexts specifically chosen for security workflows:
    // - Security guidelines and best practices
    // - Compliance frameworks and requirements
    // - Threat modeling and risk assessment
    // - Incident response procedures
    // - Security testing and validation
    // ============================================================================
    "paths": [
        // Core security guidelines - comprehensive security best practices
        "examples/contexts/domains/security-guidelines.md",
        // AWS security best practices - for cloud security management
        "contexts/aws-best-practices.md",
        // Development guidelines - secure coding standards
        "contexts/development-guidelines.md",
        // Project delivery context - for managing security projects
        "contexts/project-delivery.md",
        // Project README - provides context about the current project
        "README.md",
        // Contributing guidelines - for collaborative security projects
        "?CONTRIBUTING.md",
        // Documentation in docs folder - project-specific security documentation
        "?docs/**/*.md",
        // Security policies and procedures
        "?security/**/*.md",
        "?policies/**/*.md",
        // Compliance documentation
        "?compliance/**/*.md",
        // Incident response plans
        "?incident-response/**/*.md",
        // Risk assessments and threat models
        "?risk-assessment/**/*.md",
        "?threat-model/**/*.md",
        // Security testing documentation
        "?penetration-testing/**/*.md",
        "?vulnerability-assessment/**/*.md",
        // Audit reports and findings
        "?audits/**/*.md",
        "?findings/**/*.md"
    ],
    // HOOKS SECTION
    // ============================================================================
    // Automation hooks useful for security specialists:
    // - Vulnerability scanning and assessment
    // - Compliance monitoring and reporting
    // - Security testing automation
    // - Incident detection and response
    // - Security metrics and reporting
    // ============================================================================
    "hooks": {
        // Vulnerability scanner - runs security scans on code and infrastructure
        "vulnerability-scanner": {
            "enabled": false, // Enable when you have the hook script available
            "description": "Automated vulnerability scanning for code, dependencies, and infrastructure",
            "trigger": "on_file_save",
            "config": {
                "scan_types": [
                    "static_code_analysis",
                    "dependency_scanning",
                    "container_scanning",
                    "infrastructure_scanning"
                ],
                "file_patterns": [
                    "src/**/*.py",
                    "src/**/*.js",
                    "src/**/*.java",
                    "Dockerfile*",
                    "docker-compose*.yml",
                    "terraform/**/*.tf",
                    "k8s/**/*.yaml"
                ],
                "scanning_tools": [
                    "bandit",
                    "semgrep",
                    "trivy",
                    "checkov",
                    "snyk"
                ],
                "severity_thresholds": {
                    "critical": 0,
                    "high": 2,
                    "medium": 10,
                    "low": 50
                },
                "report_output": "reports/security/vulnerabilities/",
                "fail_on_critical": true
            }
        },
        // Compliance monitor - tracks compliance with security frameworks
        "compliance-monitor": {
            "enabled": false, // Enable when you have the hook script available
            "description": "Monitor compliance with security frameworks and standards",
            "trigger": "scheduled", // Daily compliance checks
            "config": {
                "frameworks": [
                    "SOC2",
                    "ISO27001",
                    "NIST",
                    "PCI-DSS",
                    "HIPAA",
                    "GDPR"
                ],
                "compliance_checks": [
                    "access_controls",
                    "data_encryption",
                    "audit_logging",
                    "backup_procedures",
                    "incident_response"
                ],
                "evidence_collection": [
                    "configuration_snapshots",
                    "access_logs",
                    "security_policies",
                    "training_records"
                ],
                "report_output": "reports/compliance/",
                "notification_channels": [
                    "email",
                    "slack"
                ],
                "schedule": "0 9 * * *" // Daily at 9 AM
            }
        },
        // Security testing automation - runs automated security tests
        "security-testing": {
            "enabled": false, // Enable when you have the hook script available
            "description": "Automated security testing including SAST, DAST, and penetration testing",
            "trigger": "on_deployment",
            "config": {
                "test_types": [
                    "static_analysis",
                    "dynamic_analysis",
                    "api_security_testing",
                    "authentication_testing",
                    "authorization_testing"
                ],
                "testing_tools": [
                    "owasp_zap",
                    "burp_suite",
                    "nuclei",
                    "sqlmap",
                    "nmap"
                ],
                "target_environments": [
                    "staging",
                    "pre-production"
                ],
                "test_scenarios": [
                    "injection_attacks",
                    "xss_testing",
                    "authentication_bypass",
                    "privilege_escalation",
                    "data_exposure"
                ],
                "report_output": "reports/security/testing/",
                "integration_with_ci": true
            }
        },
        // Incident response automation - handles security incident detection and response
        "incident-response": {
            "enabled": false, // Enable when you have the hook script available
            "description": "Automated incident detection and response coordination",
            "trigger": "on_security_alert",
            "config": {
                "detection_sources": [
                    "siem_alerts",
                    "ids_alerts",
                    "log_analysis",
                    "threat_intelligence",
                    "user_reports"
                ],
                "incident_types": [
                    "malware_detection",
                    "data_breach",
                    "unauthorized_access",
                    "ddos_attack",
                    "insider_threat"
                ],
                "response_actions": [
                    "alert_security_team",
                    "isolate_affected_systems",
                    "collect_evidence",
                    "notify_stakeholders",
                    "update_status_page"
                ],
                "escalation_matrix": {
                    "low": [
                        "security_analyst"
                    ],
                    "medium": [
                        "security_analyst",
                        "security_lead"
                    ],
                    "high": [
                        "security_analyst",
                        "security_lead",
                        "ciso"
                    ],
                    "critical": [
                        "security_analyst",
                        "security_lead",
                        "ciso",
                        "ceo"
                    ]
                },
                "communication_channels": [
                    "slack",
                    "email",
                    "pagerduty"
                ]
            }
        },
        // Security metrics collector - gathers and reports security metrics
        "security-metrics": {
            "enabled": false, // Enable when you have the hook script available
            "description": "Collect and report security metrics and KPIs",
            "trigger": "scheduled", // Weekly metrics collection
            "config": {
                "metrics_categories": [
                    "vulnerability_metrics",
                    "incident_metrics",
                    "compliance_metrics",
                    "security_training_metrics",
                    "threat_intelligence_metrics"
                ],
                "kpis": [
                    "mean_time_to_detection",
                    "mean_time_to_response",
                    "vulnerability_remediation_time",
                    "security_training_completion",
                    "compliance_score"
                ],
                "data_sources": [
                    "vulnerability_scanners",
                    "siem_systems",
                    "incident_management",
                    "compliance_tools",
                    "training_platforms"
                ],
                "report_formats": [
                    "dashboard",
                    "pdf",
                    "json"
                ],
                "report_output": "reports/security/metrics/",
                "schedule": "0 9 * * 1", // Weekly on Monday at 9 AM
                "stakeholders": [
                    "security_team",
                    "management",
                    "board"
                ]
            }
        },
        // Threat intelligence integration - integrates threat intelligence feeds
        "threat-intelligence": {
            "enabled": false, // Enable when you have the hook script available
            "description": "Integrate threat intelligence feeds and update security controls",
            "trigger": "scheduled", // Hourly threat intelligence updates
            "config": {
                "intelligence_sources": [
                    "commercial_feeds",
                    "open_source_feeds",
                    "government_feeds",
                    "industry_sharing",
                    "internal_intelligence"
                ],
                "feed_types": [
                    "iocs", // Indicators of Compromise
                    "ttps", // Tactics, Techniques, and Procedures
                    "vulnerabilities",
                    "malware_signatures",
                    "threat_actor_profiles"
                ],
                "integration_points": [
                    "siem_systems",
                    "firewalls",
                    "ids_ips",
                    "email_security",
                    "endpoint_protection"
                ],
                "automated_actions": [
                    "block_malicious_ips",
                    "update_signatures",
                    "create_detection_rules",
                    "alert_on_matches"
                ],
                "schedule": "0 * * * *" // Hourly updates
            }
        }
    },
    // SETTINGS SECTION
    // ============================================================================
    // Settings optimized for security workflows
    // ============================================================================
    "settings": {
        // Auto-reload contexts when files change (useful during security assessments)
        "auto_reload": true,
        // Higher limit for contexts since security specialists reference many resources
        "max_contexts": 100,
        // Validate contexts to catch broken references
        "validate_contexts": true,
        // Info level logging for security operations feedback
        "log_level": "info",
        // Security specific settings
        "security_settings": {
            // Default security framework to follow
            "primary_framework": "NIST", // or "ISO27001", "SOC2", "CIS"
            // Risk tolerance level
            "risk_tolerance": "low", // or "medium", "high"
            // Default classification level for new documents
            "default_classification": "internal", // or "public", "confidential", "restricted"
            // Encryption requirements
            "encryption_required": true,
            "encryption_algorithm": "AES-256",
            // Access control preferences
            "access_control_model": "rbac", // or "abac", "dac"
            "mfa_required": true,
            // Audit and logging preferences
            "audit_logging_enabled": true,
            "log_retention_days": 365,
            // Incident response preferences
            "incident_response_enabled": true,
            "auto_escalation": true,
            // Compliance monitoring
            "compliance_monitoring_enabled": true,
            "compliance_reporting_frequency": "monthly",
            // Threat intelligence
            "threat_intelligence_enabled": true,
            "threat_feed_update_frequency": "hourly"
        }
    }
