# Include additional files in the package distribution

# Documentation
include README.md
include LICENSE
include CHANGELOG.md

# Configuration files
include pyproject.toml
include requirements.txt
include requirements-dev.txt

# Configuration templates and examples
recursive-include configs *.json *.yaml *.yml
recursive-include contexts *.md *.txt
recursive-include hooks *.py *.yaml *.yml *.md
recursive-include templates *.yaml *.yml *.json *.md *.txt

# Tests (if we want to include them)
recursive-include tests *.py

# Exclude development and build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .pytest_cache
global-exclude .coverage
global-exclude *.egg-info
global-exclude build
global-exclude dist
global-exclude venv
global-exclude .venv